# Pokemon Showdown Environment Variables
# Copy this file to .env and modify the values as needed

# Application Environment
NODE_ENV=production

# Server Configuration
PS_PORT=8000
PS_BINDADDR=0.0.0.0
PS_WORKERS=1
PS_CRASHGUARD=true

# Database Configuration
# PostgreSQL
DATABASE_URL=postgres://postgres:password@postgres:5432/pokemonshowdown
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=pokemonshowdown

# MySQL
MYSQL_URL=mysql://root:password@mysql:3306/pokemonshowdown
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=pokemonshowdown
MYSQL_USER=pokemonshowdown
MYSQL_PASSWORD=password

# Redis (Optional)
REDIS_URL=redis://redis:6379

# Security
# Generate strong passwords for production!
SECRET_KEY=your-secret-key-here

# Login Server (Default Pokemon Showdown settings)
LOGIN_SERVER=http://play.pokemonshowdown.com/
LOGIN_SERVER_KEY_ALGO=RSA-SHA1
LOGIN_SERVER_PUBLIC_KEY_ID=4

# SSL Configuration (Optional)
# SSL_KEY_PATH=/path/to/ssl/privkey.pem
# SSL_CERT_PATH=/path/to/ssl/fullchain.pem
# SSL_PORT=443

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/pokemon-showdown.log

# Development Settings (only for development)
DEBUG=false
DEBUG_SIM_PROCESSES=true
DEBUG_VALIDATOR_PROCESSES=true
DEBUG_DEXSEARCH_PROCESSES=true

# Pokemon of the Day
POTD=

# Email Configuration (Optional)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM=noreply@example.com

# Proxy Configuration (Optional)
# PROXY_IP=false

# WebSocket Compression (Optional)
# WS_DEFLATE=true 